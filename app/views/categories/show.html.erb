<h1 class= "articles-title">Category: <%= @category.name %></h1>

<% if logged_in? && current_user.admin? %>
  <div class="btn-container text-center mt-4">
    <%= link_to "Edit Category", edit_category_path(@category), class: "btn btn-secondary" %>
  </div>
<% end %>

<h3 class= "text-center mt-4">Articles</h3>

<%= render 'articles/article' %>

<div class="flickr_pagination pagination_bottom">
  <%= will_paginate @articles, :container => false %>
</div>