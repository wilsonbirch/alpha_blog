<h1 class= "articles-title"><%= @user.username %>'s Profile</h1>

<%= gravatar_for @user, size:200 %>

<% if logged_in? && @user == current_user %>
  <div class="text-center mt-4">
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-secondary" %>
  </div>
<% end %>

<h3 class= "text-center mt-4">Articles</h3>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

<div class="flickr_pagination pagination_bottom">
  <%= will_paginate @articles, :container => false %>
</div>