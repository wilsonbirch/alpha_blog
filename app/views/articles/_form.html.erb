<div class ="container">
  <%= render "shared/errors" %>

  <div class="container articles-content" >
    <%= form_with(model: @article, class: "shadow p-3 mb-5 bg-secondary rounded", local: true, data: { turbo: false })  do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :title, class:"form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :description, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_area :description, rows:10, class:"form-control" %>
        </div>
      </div>
      <div class="btn-container">
        <%= f.submit class: "btn btn-outline-dark btn-lg" %>
      </div>
    <%end%>
  </div>
</div>